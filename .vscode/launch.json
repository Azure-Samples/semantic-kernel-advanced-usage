  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/templates/azure-bot/src/api",
      "args": ["app:app", "--host", "0.0.0.0", "--port", "5001"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "justMyCode": false
    }
  ]
}
